CREATE TABLE IF NOT EXISTS chess.UserDAO
(
username VARCHAR(50) PRIMARY KEY UNIQUE,
password VARCHAR(40) NOT NULL,
email VARCHAR(40) NOT NULL
);

CREATE TABLE IF NOT EXISTS chess.AuthDAO
(
authId INT PRIMARY KEY AUTO_INCREMENT,
authToken VARCHAR(40) NOT NULL UNIQUE,
username VARCHAR(50) NOT NULL,
FOREIGN KEY (username) REFERENCES chess.UserDAO(username)
);

CREATE TABLE IF NOT EXISTS chess.GameDAO
(
gameId INT PRIMARY KEY AUTO_INCREMENT,
whiteUsername VARCHAR(50) NULL,
blackUsername VARCHAR(50) NULL,
gameName VARCHAR(40) NOT NULL,
game LONGTEXT,
whiteTaken BIT NOT NULL,
blackTaken BIT NOT NULL
);